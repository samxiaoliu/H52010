<% include ../partials/header%>
<div class="container" style="text-align: center">
    <h1>Editing comment</h1>

    <form action="/home/<%= campground_id %>/comment/<%= foundComment._id %>?_method=PUT" method="POST">
        <div class="input-group mb-3" style="margin-top: 20px">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon3">Comment</span>
            </div>
            <input type="text" class="form-control" id="basic-url"
                   aria-label="Sizing example input"
                   aria-describedby="inputGroup-sizing-default"
                   name="comment[text]"
                   value="<%= foundComment.text %>">
        </div>

        <input type="submit" class="btn btn-info btn-lg btn-block">
    </form>
    <a href="/home/<%= campground_id %>">Go back</a>
</div>

<% include ../partials/footer %>